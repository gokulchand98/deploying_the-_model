# Copy to .env and set your API keys

# OpenAI API for cover letter generation
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Twilio credentials for SMS and phone call notifications
# Sign up at: https://www.twilio.com/try-twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
YOUR_PHONE_NUMBER=+1987654321

# Notification thresholds (optional - defaults provided)
SMS_THRESHOLD=15
CALL_THRESHOLD=30

# Backend URL for Streamlit UI (change if deploying separately)
BACKEND_URL=http://localhost:8000
